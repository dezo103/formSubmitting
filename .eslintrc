{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "no-console": "off",
    "prefer-const": "error",
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-double"],
    "indent": ["warn", 4],
    "max-len": ["warn", { "code": 120}],
    "multiline-ternary": ["error", "always-multiline"],
    "semi": ["off"],
    "import/order": ["error", {
      "groups" : ["builtin", "external", "internal", "parent", "sibling", "index", "object", "type"],
      "newlines-between": "always-and-inside-groups"
    }]
  }
}